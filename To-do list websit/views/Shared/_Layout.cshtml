<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

</head>
<body>
    <header>
       <nav class="container navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" asp-controller="categories" asp-action="index">Get All Categories</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Users" asp-action="index">Get All Users</a>
        </li>
        <li class="nav-item">
                            <a class="nav-link" asp-controller="tasks" asp-action="index">Get All Tasks</a>
        </li>
     
       
      </ul>
      <form class="d-flex" asp-controller="tasks" asp-action="filter">
        <input class="form-control me-2" type="search" placeholder="enter fillter" aria-label="Search" name="nam">
                        <select class="form-select" aria-label="Default select example" name="st">
                            <option selected>Select Menu</option>
                            <option value="1">Open</option>
                            <option value="2">In Progress</option>
                            <option value="3">Done</option>
                        </select>

        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>
  </div>
</nav>
    </header>
    <div class="container">
      
        @RenderBody()
    </div>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    @RenderSection("scripts",false)
</body>
</html>
